.neon-blue-badge {
  border-color: rgba(79, 211, 255, 0.9);
  color: #b9ecff;
  text-shadow: 0 0 6px rgba(79, 211, 255, 0.8);
}

/* Other neon accents */

.neon-green-border {
  box-shadow: 0 0 14px rgba(0, 255, 136, 0.7);
  border-color: rgba(0, 255, 136, 0.9);
}

.neon-yellow-border {
