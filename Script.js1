    <!-- RU TEAM PAGE -->
    <section id="ruSection" class="section hidden" aria-labelledby="ruTitle">
      <div style="display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap">
        <div style="display:flex;gap:12px;align-items:center">
          <img src="Richmond_united_logo.png" alt="RU logo" class="logo-sm" id="ruLogo">
          <div>
            <h2 id="ruTitle" style="margin:0">Richmond United U11 Pre ECNL Orange 2</h2>
            <div class="muted">RU Pre‑ECNL 2 • State #38 • National #649</div>
          </div>
        </div>
        <div class="rank-badges">
          <div class="badge">State #38</div>
          <div class="badge">National #649</div>
          <div class="badge">Roster: Coming Soon</div>
        </div>
      </div>

      <div style="display:grid;grid-template-columns:1fr 360px;gap:12px;margin-top:12px">
        <!-- left column -->
        <div>
          <div class="section">
            <h3 style="margin:0 0 8px 0">How We Play</h3>
            <div class="label">Style of Play</div>
            <textarea id="style_play" class="editable" placeholder="Describe your team's style (possession, press, counter, etc.)"></textarea>

            <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;margin-top:10px">
              <div>
                <div class="label">Formations</div>
                <textarea id="formations" class="editable" placeholder="Primary formations used (e.g., 4-3-3, 4-2-3-1)"></textarea>
              </div>
              <div>
                <div class="label">Pressing / Defense</div>
                <textarea id="press_def" class="editable" placeholder="How the team presses and defends"></textarea>
              </div>
            </div>

            <div style="display:grid;grid-template-columns:1fr 1fr;gap:10px;margin-top:10px">
              <div>
                <div class="label">Attacking</div>
                <textarea id="attacking" class="editable" placeholder="Attacking tendencies and patterns"></textarea>
              </div>
              <div>
                <div class="label">Build Out</div>
                <textarea id="buildout" class="editable" placeholder="Build-out strategy from the back"></textarea>
              </div>
            </div>

            <div style="margin-top:10px">
              <div class="label">Strengths</div>
              <textarea id="strengths" class="editable" placeholder="Team strengths"></textarea>
            </div>

            <div style="margin-top:10px">
              <div class="label">What We're Working On</div>
              <textarea id="working_on" class="editable" placeholder="Season focuses, technical & tactical goals"></textarea>
