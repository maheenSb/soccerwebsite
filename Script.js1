    <footer>
      TurfVision — Jefferson Cup • Premier • Editable team pages saved locally
    </footer>
  </div>

  <script>
    /* ---------- Simple SPA navigation ---------- */
    const homeSection = document.getElementById('homeSection');
    const teamsSection = document.getElementById('teamsSection');
    const tournSection = document.getElementById('tournamentsSection');
    const ruSection = document.getElementById('ruSection');
    const jeffSection = document.getElementById('jeffSection');
    const asistSection = document.getElementById('asistSection');

    const navHomeBtn = document.getElementById('navHomeBtn');
    const navTeamsBtn = document.getElementById('navTeamsBtn');
    const navTournBtn = document.getElementById('navTournBtn');
    const gotoJeff = document.getElementById('gotoJeff');
    const gotoTeams = document.getElementById('gotoTeams');
    const openRU = document.getElementById('openRU');
    const viewRUFromTeams = document.getElementById('viewRUFromTeams');
    const tabJeff = document.getElementById('tabJeff');
    const tabAsist = document.getElementById('tabAsist');

    function showSection(name){
      homeSection.classList.add('hidden');
      teamsSection.classList.add('hidden');
      tournSection.classList.add('hidden');
      ruSection.classList.add('hidden');

      navHomeBtn.classList.remove('active');
      navTeamsBtn.classList.remove('active');
      navTournBtn.classList.remove('active');

      if(name==='home'){ homeSection.classList.remove('hidden'); navHomeBtn.classList.add('active') }
      if(name==='teams'){ teamsSection.classList.remove('hidden'); navTeamsBtn.classList.add('active') }
      if(name==='tournaments'){ tournSection.classList.remove('hidden'); navTournBtn.classList.add('active') }
      if(name==='ru'){ ruSection.classList.remove('hidden'); }
      window.scrollTo({top:0,behavior:'smooth'});
    }

    navHomeBtn.addEventListener('click',()=>showSection('home'));
    navTeamsBtn.addEventListener('click',()=>showSection('teams'));
    navTournBtn.addEventListener('click',()=>showSection('tournaments'));
    gotoJeff.addEventListener('click',()=>{ showSection('tournaments'); tabJeff.click(); });
    gotoTeams.addEventListener('click',()=>showSection('teams'));
    openRU.addEventListener('click',()=>{ showSection('ru'); });
    viewRUFromTeams.addEventListener('click',()=>{ showSection('ru'); });

    tabJeff.addEventListener('click',()=>{
      tabJeff.classList.add('active'); tabAsist.classList.remove('active');
      jeffSection.classList.remove('hidden'); asistSection.classList.add('hidden');
    });
    tabAsist.addEventListener('click',()=>{
      tabAsist.classList.add('active'); tabJeff.classList.remove('active');
      asistSection.classList.remove('hidden'); jeffSection.classList.add('hidden');
    });

    // initial view
    showSection('home');

    /* ---------- LocalStorage helpers for RU page ---------- */
    const LS_PREFIX = 'turfvision_ru_';

    function lsGet(key, fallback){
      try{
        const v = localStorage.getItem(LS_PREFIX + key);
        return v === null ? fallback : JSON.parse(v);
      }catch(e){ return fallback; }
    }
    function lsSet(key, value){
      try{ localStorage.setItem(LS_PREFIX + key, JSON.stringify(value)); }catch(e){}
    }

    /* ---------- Wire editable fields ---------- */
    const editableIds = [
      'style_play','formations','press_def','attacking','buildout',
      'strengths','working_on','team_goals','player_goals','tactical_goals','quick_notes'
    ];
    editableIds.forEach(id=>{
      const el = document.getElementById(id);
      if(!el) return;
      // load
      el.value = lsGet(id, '');
      // save on input (debounced)
      let t;
      el.addEventListener('input', ()=>{
        clearTimeout(t);
        t = setTimeout(()=> lsSet(id, el.value), 350);
      });
    });

    /* ---------- Video Library ---------- */
    const videoGrid = document.getElementById('videoGrid');
    const addVideoBtn = document.getElementById('addVideoBtn');

    function createVideoCard(url){
      const card = document.createElement('div');
      card.className = 'video-card';
      const input = document.createElement('input');
      input.placeholder = 'Paste YouTube / Hudl / Drive link';
      input.value = url || '';
      card.appendChild(input);

      const preview = document.createElement('div');
      preview.style.marginTop = '8px';
      card.appendChild(preview);

      const controls = document.createElement('div');
      controls.style.display='flex';
      controls.style.gap='8px';
      controls.style.marginTop='8px';

      const saveBtn = document.createElement('button');
      saveBtn.className='nav-btn';
      saveBtn.textContent='Save';
      controls.appendChild(saveBtn);

      const removeBtn = document.createElement('button');
      removeBtn.className='nav-btn';
      removeBtn.textContent='Remove';
      controls.appendChild(removeBtn);

      card.appendChild(controls);

      function renderPreview(){
        const v = input.value.trim();
        preview.innerHTML = '';
        if(!v) return;
        // YouTube embed
        const yt = parseYouTube(v);
        if(yt){
          const iframe = document.createElement('iframe');
          iframe.src = 'https://www.youtube.com/embed/' + yt;
          iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
          iframe.setAttribute('allowfullscreen','');
          iframe.style.width='100%';
          iframe.style.height='160px';
          preview.appendChild(iframe);
          return;
        }
        // Hudl or Drive or generic link: show clickable link
        const a = document.createElement('a');
        a.href = v;
        a.target = '_blank';
        a.rel = 'noopener';
        a.textContent = 'Open video link';
        a.className = 'muted-2';
        preview.appendChild(a);
      }

      saveBtn.addEventListener('click', ()=>{
        saveVideoCards();
        renderVideoGrid();
      });
      removeBtn.addEventListener('click', ()=>{
        // remove this card from DOM and save
        card.remove();
        saveVideoCards();
        renderVideoGrid();
      });

      input.addEventListener('input', renderPreview);
      renderPreview();
      return card;
    }

    function parseYouTube(url){
      try{
        const u = new URL(url);
        if(u.hostname.includes('youtube.com')){
          return u.searchParams.get('v');
        }
        if(u.hostname === 'youtu.be'){
          return u.pathname.slice(1);
        }
      }catch(e){}
      return null;
    }

    function loadVideoCards(){
      const arr = lsGet('videos', []);
      return arr;
    }
    function saveVideoCards(){
      const cards = Array.from(videoGrid.querySelectorAll('.video-card input')).map(i=>i.value.trim()).filter(Boolean);
      lsSet('videos', cards);
    }
    function renderVideoGrid(){
      videoGrid.innerHTML = '';
      const arr = loadVideoCards();
      if(arr.length === 0){
        // show an empty slot
        const placeholder = createVideoCard('');
        videoGrid.appendChild(placeholder);
      }else{
        arr.forEach(url=>{
          const card = createVideoCard(url);
          videoGrid.appendChild(card);
        });
      }
    }

    addVideoBtn.addEventListener('click', ()=>{
      const card = createVideoCard('');
      videoGrid.appendChild(card);
      // focus input
      setTimeout(()=> card.querySelector('input').focus(), 80);
    });

    // initial render
    renderVideoGrid();

    /* ---------- Match Notes ---------- */
    const notesList = document.getElementById('notesList');
    const addNoteBtn = document.getElementById('addNoteBtn');
    const noteOpponent = document.getElementById('noteOpponent');
    const noteScore = document.getElementById('noteScore');

    function loadNotes(){ return lsGet('notes', []); }
    function saveNotes(notes){ lsSet('notes', notes); }

    function renderNotes(){
      notesList.innerHTML = '';
      const notes = loadNotes();
      if(notes.length === 0){
        const p = document.createElement('div');
        p.className='muted';
        p.textContent = 'No match notes yet.';
        notesList.appendChild(p);
        return;
      }
      notes.slice().reverse().forEach((n, idx)=>{
        const el = document.createElement('div');
        el.className='note';
        const meta = document.createElement('div');
        meta.className='meta';
        meta.innerHTML = `<strong>${n.opponent || 'Unknown'}</strong> • <span class="muted-2">${n.score || ''}</span> <span style="float:right"><button class="nav-btn" data-i="${idx}">Delete</button></span>`;
        const text = document.createElement('div');
        text.className='text';
        text.textContent = n.text || '';
        el.appendChild(meta);
        el.appendChild(text);
        notesList.appendChild(el);
      });

      // wire delete buttons
      notesList.querySelectorAll('button[data-i]').forEach(btn=>{
        btn.addEventListener('click', ()=>{
          const i = parseInt(btn.getAttribute('data-i'),10);
          const notes = loadNotes();
          notes.splice(notes.length - 1 - i, 1); // reverse index
          saveNotes(notes);
          renderNotes();
        });
      });
    }

    addNoteBtn.addEventListener('click', ()=>{
      const opp = noteOpponent.value.trim();
      const score = noteScore.value.trim();
      const text = prompt('Add quick note for this match (what went well / what to improve):') || '';
      if(!opp && !score && !text) return;
      const notes = loadNotes();
      notes.push({opponent:opp, score:score, text:text, created:Date.now()});
      saveNotes(notes);
      noteOpponent.value=''; noteScore.value='';
      renderNotes();
    });

    renderNotes();

    /* ---------- Quick autosave for video grid and notes on unload ---------- */
    window.addEventListener('beforeunload', ()=>{
      saveVideoCards();
    });

    /* ---------- Small UX: focus first editable when RU opens ---------- */
    const ruOpenButtons = [openRU, viewRUFromTeams, document.getElementById('viewRUFromTeams')];
    ruOpenButtons.forEach(b=>{
      if(!b) return;
      b.addEventListener('click', ()=>{
        setTimeout(()=> {
          const el = document.getElementById('style_play');
          if(el) el.focus();
        }, 300);
      });
    });

    /* ---------- Accessibility: keyboard shortcuts ---------- */
    document.addEventListener('keydown', (e)=>{
      if(e.key === '1'){ showSection('home'); }
      if(e.key === '2'){ showSection('teams'); }
      if(e.key === '3'){ showSection('tournaments'); }
      if(e.key === '4'){ showSection('ru'); }
    });

    /* ---------- Small: load RU logo fallback if missing ---------- */
    const ruLogo = document.getElementById('ruLogo');
    ruLogo.onerror = ()=>{ ruLogo.src = 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="160" height="160"><rect width="100%" height="100%" fill="%23020b10"/><text x="50%" y="50%" fill="%23bfffd0" font-size="18" font-family="Arial" text-anchor="middle" alignment-baseline="middle">RU Logo</text></svg>'; };

    /* ---------- small: nav logo fallback ---------- */
    const navLogo = document.getElementById('navLogo');
    navLogo.onerror = ()=>{ navLogo.src = 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="160" height="160"><rect width="100%" height="100%" fill="%23020b10"/><text x="50%" y="50%" fill="%23bfffd0" font-size="18" font-family="Arial" text-anchor="middle" alignment-baseline="middle">TurfVision</text></svg>'; };

    /* ---------- small: hero logo fallback ---------- */
    const heroLogo = document.getElementById('heroLogo');
    heroLogo.onerror = ()=>{ heroLogo.src = navLogo.src; };

    /* ---------- Ensure video grid renders saved videos on load ---------- */
    (function initSavedVideos(){
      const saved = loadVideoCards();
      if(saved && saved.length){
        // clear current grid and render saved
        videoGrid.innerHTML = '';
        saved.forEach(url=>{
          const card = createVideoCard(url);
          videoGrid.appendChild(card);
        });
      }
    })();

    /* ---------- Utility: createVideoCard used in initSavedVideos ---------- */
    // (createVideoCard defined earlier; ensure it's available here)
  </script>
</body>
