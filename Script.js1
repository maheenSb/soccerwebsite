      <!-- ASIST -->
      <div id="asistSection" class="hidden" style="margin-top:12px">
        <div class="section">
          <h3>ASIST</h3>
          <p class="muted">Coming Soon — bracket layout and standings will appear here when available.</p>
          <div style="margin-top:8px" class="muted-2">Planned features: bracket layout, team list, standings, schedule links.</div>
        </div>
