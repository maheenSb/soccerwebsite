            <div style="margin-top:10px">
              <div class="label">Individual Player Goals</div>
              <textarea id="player_goals" class="editable" placeholder="Examples: improve weak foot, fitness, decision-making"></textarea>
            </div>

            <div style="margin-top:10px">
              <div class="label">Tactical Goals</div>
              <textarea id="tactical_goals" class="editable" placeholder="Tactical focuses (press triggers, shape, transitions)"></textarea>
            </div>
          </div>

          <div class="section" style="margin-top:12px">
            <h3 style="margin:0 0 8px 0">Match Notes</h3>
            <div style="display:flex;gap:8px;align-items:center">
              <input id="noteOpponent" placeholder="Opponent" style="flex:1;padding:8px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:var(--muted)">
              <input id="noteScore" placeholder="Score" style="width:120px;padding:8px;border-radius:8px;border:1px solid rgba(255,255,255,0.04);background:transparent;color:var(--muted)">
              <button class="add-video" id="addNoteBtn">Add Note</button>
            </div>
            <div style="margin-top:10px" class="notes-list" id="notesList">
              <!-- notes render here -->
            </div>
          </div>
        </div>

        <!-- right column -->
        <aside>
          <div class="section">
            <h3 style="margin:0 0 8px 0">Roster</h3>
            <div class="muted">Roster: Coming Soon</div>
            <div style="margin-top:10px">
              <div class="label">Team Colors</div>
              <div class="muted-2">Orange / White / Navy (example)</div>
            </div>
          </div>

          <div class="section" style="margin-top:12px">
            <h3 style="margin:0 0 8px 0">Video Library</h3>
            <div class="muted">Paste YouTube, Hudl, or Drive links. Videos are saved locally.</div>
            <div style="margin-top:10px;display:flex;gap:8px">
              <button class="add-video" id="addVideoBtn">+ Add Video</button>
            </div>

            <div class="video-grid" id="videoGrid" style="margin-top:12px">
              <!-- video cards inserted here -->
            </div>
          </div>

          <div class="section" style="margin-top:12px">
            <h3 style="margin:0 0 8px 0">Quick Notes</h3>
            <div class="muted">Use this area for quick reminders or training notes.</div>
            <textarea id="quick_notes" class="editable" placeholder="Quick notes..."></textarea>
          </div>
        </aside>
