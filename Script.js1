}

.body-neon-blue {
  background: radial-gradient(circle at top, #00c3ff 0, #02041a 45%, #000000 100%);
}

.body-neon-yellow {
  background: radial-gradient(circle at top, #ffe45e 0, #1a1302 45%, #000000 100%);
}

.body-neon-purple {
  background: radial-gradient(circle at top, #c77dff 0, #12021a 45%, #000000 100%);
}

/* Neon cards */

.card-neon {
  background: rgba(3, 4, 12, 0.9);
  border-radius: 18px;
  border: 1px solid rgba(255, 255, 255, 0.22);
  box-shadow: 0 0 18px rgba(255, 255, 255, 0.18);
}

/* RU electric blue neon */

.neon-blue-text {
  color: #4fd3ff;
  text-shadow: 0 0 8px rgba(79, 211, 255, 0.9), 0 0 18px rgba(79, 211, 255, 0.7);
