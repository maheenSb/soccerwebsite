:root {
  --bg-dark: #05060a;
  --text-main: #f5f7ff;
  --nav-bg: rgba(0, 0, 0, 0.85);
  --nav-border: rgba(255, 255, 255, 0.18);
  --card-bg: rgba(10, 12, 20, 0.9);
  --card-border: rgba(255, 255, 255, 0.16);
  --shadow-soft: 0 18px 40px rgba(0, 0, 0, 0.7);
  --radius-lg: 16px;
  --radius-md: 12px;
  --transition-fast: 0.18s ease-out;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body {
  height: 100%;
}

body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  color: var(--text-main);
  background: var(--bg-dark);
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  max-width: 100%;
  display: block;
}

/* HEADER / NAV */

.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  background: var(--nav-bg);
  border-bottom: 1px solid var(--nav-border);
  backdrop-filter: blur(10px);
}

.header-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 10px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
}

.logo-wrap {
  display: flex;
  align-items: center;
  gap: 10px;
}

.logo-img {
  height: 80px; /* large logo */
  width: auto;
}

.logo-text {
  font-size: 20px;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  opacity: 0.85;
}

.main-nav {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  justify-content: flex-end;
}

.nav-link {
  padding: 6px 12px;
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.22);
  font-size: 14px;
  background: rgba(10, 10, 18, 0.7);
  transition: background var(--transition-fast), transform var(--transition-fast), box-shadow var(--transition-fast);
}

.nav-link:hover {
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.25);
}

.nav-link:active {
  transform: scale(0.96);
}

/* LAYOUT */

.page-shell {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-main {
  flex: 1;
}

.page-inner {
  max-width: 1100px;
  margin: 0 auto;
  padding: 24px 16px 40px;
}

.card {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  border: 1px solid var(--card-border);
  box-shadow: var(--shadow-soft);
  padding: 20px 18px;
  margin-bottom: 22px;
}

.card-title {
  font-size: 26px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  margin-bottom: 10px;
}

.card-subtitle {
  font-size: 14px;
  opacity: 0.85;
  margin-bottom: 14px;
}

.grid {
  display: grid;
  gap: 12px;
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
}

.badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 11px;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  border: 1px solid rgba(255, 255, 255, 0.35);
  opacity: 0.9;
  margin-bottom: 8px;
}

.pill-button {
  width: 100%;
  border-radius: 999px;
  border: 1px solid rgba(255, 255, 255, 0.25);
  background: rgba(15, 16, 30, 0.9);
  padding: 12px 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  cursor: pointer;
  color: var(--text-main);
  transition: background var(--transition-fast), transform var(--transition-fast), box-shadow var(--transition-fast);
}

.pill-button span {
  font-weight: 600;
}

.pill-button small {
  font-size: 12px;
  opacity: 0.8;
}

.pill-button:hover {
  background: rgba(255, 255, 255, 0.12);
  box-shadow: 0 0 12px rgba(255, 255, 255, 0.25);
}

.pill-button:active {
  transform: scale(0.97);
}

/* TABLES */

.table-wrap {
  overflow-x: auto;
}

.table {
  width: 100%;
  border-collapse: collapse;
  font-size: 13px;
  margin-top: 10px;
}

.table th,
.table td {
  padding: 6px 8px;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.25);
}

.table th {
  background: rgba(255, 255, 255, 0.12);
  font-weight: 600;
}

/* FOOTER */

.site-footer {
  padding: 14px 16px 20px;
  font-size: 12px;
  text-align: center;
  opacity: 0.7;
}

/* ANIMATIONS */

.fade-up {
  opacity: 0;
  transform: translateY(10px);
  animation: fadeUp 0.4s ease-out forwards;
}

.fade-up:nth-of-type(1) { animation-delay: 0.05s; }
.fade-up:nth-of-type(2) { animation-delay: 0.1s; }
.fade-up:nth-of-type(3) { animation-delay: 0.15s; }
.fade-up:nth-of-type(4) { animation-delay: 0.2s; }

@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* RESPONSIVE */

@media (max-width: 720px) {
  .header-inner {
    flex-direction: column;
    align-items: flex-start;
  }

  .logo-img {
    height: 70px;
  }

  .main-nav {
    justify-content: flex-start;
  }
}
/* Home + Jeff Cup stadium background */

.body-stadium {
